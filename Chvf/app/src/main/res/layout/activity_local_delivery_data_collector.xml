<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fce4ec"
    tools:context=".LocalDeliveryDataCollector">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="344dp"
        android:layout_height="61dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="5dp"
        android:text="C.H.V.F"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etParentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etParentName"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="31dp"
        android:background="#e0e0e0"
        android:ems="10"
        android:hint="Full mother's names"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etCName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

    <EditText
        android:id="@+id/etCName"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="23dp"
        android:background="#e0e0e0"
        android:ems="10"
        android:hint="@android:string/emptyPhoneNumber"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etChildName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etParentName" />

    <EditText
        android:id="@+id/etChildName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="17dp"
        android:background="#e0e0e0"
        android:ems="10"
        android:hint="Name of child"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etDelDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCName" />

    <EditText
        android:id="@+id/etDelDate"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:background="#e0e0e0"
        android:ems="10"
        android:hint="date delivered"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etChildName" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="31dp"
        android:background="#e0e0e0"
        android:ems="10"
        android:hint="Location of residence"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etDistrict"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDelDate" />

    <EditText
        android:id="@+id/etDistrict"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="31dp"
        android:background="#e0e0e0"
        android:ems="10"
        android:hint="District"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmitPregData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLocation" />

    <Button
        android:id="@+id/btnSubmitPregData"
        android:layout_width="342dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="#4fc3f7"
        android:text="SUBMIT"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDistrict" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="303dp"
        android:layout_height="34dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="20dp"
        android:text="Fill data for Local delivery case"
        android:textAlignment="center"
        android:textColor="#1565c0"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/etParentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>